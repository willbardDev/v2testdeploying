{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@jumbo/*": ["./@jumbo/*"],
      "@assets/*": ["./@assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@jumbo/types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.d.ts",
    "next.config.js"
, "src/app/api/auth/[...nextauth]/route.js", "src/app/auth-providers/BasicAuth/BasicAuth.js", "src/app/helpers/style-helpers.js", "src/app/helpers/input-sanitization-helpers.js", "src/app/helpers/init-firebase.js", "@jumbo/hooks/useJumboAuth.js", "src/components/AuthInitializer/AuthInitializer.jsx", "src/components/AuthUserPopover/AuthUserPopover.jsx", "src/components/LoginForm/LoginForm.jsx"  ],
  "exclude": ["node_modules"]
}
